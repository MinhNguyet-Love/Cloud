app.get("/", (req, res) => {
  const { success, error } = req.query;
  const sql = "SELECT * FROM products ORDER BY id ASC";
  connection.query(sql, (err, results) => {
    if (err) {
      res.render("index", { success, error, products: [] });
    } else {
      res.render("index", { success, error, products: results });
    }
  });
});
